+define Package/lxc-common/postinst
+#!/bin/sh
+[ -n "$$IPKG_INSTROOT" ] || {
+	if cd /lxc 2> /dev/null; then
+		for i in *; do
+			if [ -d "$$i" ] && [ \! -e "/srv/lxc/$$i" ]; then
+				ln -s "../../lxc/$$i" "/srv/lxc/$$i"
+			fi
+		done
+	fi
+	sed -i 's|api.turris.cz|repo.turris.cz|' /etc/config/lxc
+}
+endef
+
 
