+define Package/lxc-auto/postinst
+#!/bin/sh
+[ -n "$$IPKG_INSTROOT" ] || {
+	/etc/init.d/lxc-auto enable
+}
+endef
+
+define Package/lxc-common/postinst
+#!/bin/sh
+[ -n "$$IPKG_INSTROOT" ] || {
+	if cd /lxc; then
+		for i in *; do
+			if [ -d "$$i" ] && [ \! -e "/srv/lxc/$$i" ]; then
+				ln -s "../../lxc/$$i" "/srv/lxc/$$i"
+			fi
+		done
+	fi
+}
+endef
+
 
